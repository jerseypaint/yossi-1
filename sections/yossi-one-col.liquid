<section>
    <div class="container text-center">
        {% assign block_ratio = 'pt-3/2' %}

        {% if section.settings.orientation == 'horizontal' %}
            {% assign block_ratio = 'pt-3/2' %}
        {% endif %}
        {% for block in section.blocks %}
            {% if block.settings.heading %}
                <h2 class="mt-12">{{ block.settings.heading }}</h2>
            {% endif %}
            <div class="relative w-full {{ block_ratio }}">
                {% case block.type %}
                    {% when 'image' %}
                        {{ block.settings.image | image_url: width: 1024 | image_tag: alt: '', class: 'absolute top-0 left-0 w-full h-full object-cover' }}
                    {% when 'video' %}
                        <video muted autoplay controls="false">
                            <source src="{{ block.settings.video_url }}" type="video/mp4">
                            Your browser does not support the mp4 video format.
                        </video>
                    {% else %}
                        <div class="pb-12">
                            <div class="mt-8">
                                {{ block.settings.body }}
                            </div>
                            <div class="mt-12">
                                <a href="{{ block.settings.button_link }}">{{ block.settings.button_text }}</a>
                            </div>
                        </div>

                {% endcase %}
            </div>
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "Y-1 Col",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "select",
        "id": "orientation",
        "label": "Orientation",
        "options": [
          {
            "value": "horizontal",
            "label": "horizontal"
          },
          {
            "value": "vertical",
            "label": "vertical"
          }
        ],
        "default": "vertical"
    },
    {
        "type": "checkbox",
        "id": "padding",
        "label": "Add padding",
        "info": "If left unchecked, all blocks will go edge to edge (full-width). Otherwise, all blocks will have white padding around the content",
        "default": true
    }
  ],
  "blocks": [
    {
        "name": "Video",
        "type": "video",
        "settings": [
            {
                "type": "url",
                "id": "video_url",
                "label": "Video URL"
              }
        ]
    },
    {
        "name": "Image",
        "type": "image",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "image_picker",
                "id": "Image",
                "label": "Image"
            },
            {
                "type": "url",
                "id": "image_link",
                "label": "Image Link"
            }
        ]
    },
    {
        "name": "Text",
        "type": "text",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "textarea",
                "id": "body",
                "label": "body"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button Link"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Y-1 Col"
    }
  ]
}
{% endschema %}
