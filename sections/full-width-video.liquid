{% schema %}
{
  "name": "Full Video Embed",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (from Files)"
    },
    {
      "type": "text",
      "id": "video_alt",
      "label": "Video Alt Text",
      "default": "Background Video"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "muted",
      "label": "Muted",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "controls",
      "label": "Show Controls",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Full Video Embed"
    }
  ]
}
{% endschema %}

{% if section.settings.video_url != blank %}
  <section class="full-width-video">
    <video
      class="w-full h-auto"
      src="{{ section.settings.video_url }}"
      {% if section.settings.autoplay %}autoplay{% endif %}
      {% if section.settings.loop %}loop{% endif %}
      {% if section.settings.muted %}muted{% endif %}
      {% if section.settings.controls %}controls{% endif %}
      playsinline
    >
      {{ section.settings.video_alt }}
    </video>
  </section>
{% else %}
  <p style="text-align:center;">Please add a video URL in the section settings.</p>
{% endif %}

<style>
  .full-width-video video {
    display: block;
    width: 100%;
    max-width: 100%;
    height: auto;
  }
</style>
