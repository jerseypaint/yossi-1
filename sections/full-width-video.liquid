{% schema %}
{
  "name": "Full Video Embed",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (from Files)"
    },
    {
      "type": "text",
      "id": "video_alt",
      "label": "Video Alt Text",
      "default": "Background Video"
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "controls",
      "label": "Show Controls",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Full Video Embed"
    }
  ]
}
{% endschema %}

{% if section.settings.video_url != blank %}
  <section class="full-width-video" style="position: relative;">
    <video
      id="custom-video"
      class="w-full h-auto"
      src="{{ section.settings.video_url }}"
      autoplay
      loop="{{ section.settings.loop }}"
      muted
      playsinline
      {% if section.settings.controls %}controls{% endif %}
    >
      {{ section.settings.video_alt }}
    </video>

    <button
      id="mute-toggle"
      aria-label="Toggle Sound"
      style="
        position: absolute;
        bottom: 20px;
        right: 20px;
        background: rgba(0,0,0,0.5);
        color: white;
        border: none;
        padding: 8px 12px;
        font-size: 14px;
        cursor: pointer;
        z-index: 5;
        border-radius: 4px;
      "
    >
      ðŸ”‡ Sound Off
    </button>
  </section>
{% else %}
  <p style="text-align:center;">Please add a video URL in the section settings.</p>
{% endif %}

<style>
  .full-width-video video {
    display: block;
    width: 100%;
    max-width: 100%;
    height: auto;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const video = document.getElementById("custom-video");
    const toggleBtn = document.getElementById("mute-toggle");

    if (video && toggleBtn) {
      toggleBtn.addEventListener("click", () => {
        video.muted = !video.muted;
        toggleBtn.textContent = video.muted ? "ðŸ”‡ Sound Off" : "ðŸ”Š Sound On";
      });
    }
  });
</script>
